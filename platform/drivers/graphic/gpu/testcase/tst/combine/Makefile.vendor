include ../../Makefile.def

OUT = ../../bin
NAME = combine
SOURCES = ./main.c \
          ./gfx_sft_util.c \
          ./gfx_1.c \
          ./gfx_2_3.c \
          ./gfx_sft_blit.c \
          ./gfx_sft_path_draw.c

LIBS += vg_lite vg_lite_util
CFLAGS += -I$(SDK_DIR)/inc -I../util
CFLAGS += -D__LINUX__
LDFLAGS += -L$(SDK_DIR)/drivers -L$(OUT) $(addprefix -l,$(LIBS))

ifeq ($(USE_FIRMWARE), 1)
CFLAGS += -DVGLITE_TST_FIRMWARE
endif

all : $(OUT)/$(NAME)
	@cp -f golden/*.raw $(OUT)

clean :
	@rm -f $(OUT)/$(NAME)

$(OUT) :
	@mkdir $(OUT)

$(OUT)/libvg_lite_util.so :
	@make -C ../util

$(OUT)/$(NAME) : $(OUT) $(SOURCES) $(OUT)/libvg_lite_util.so
	@echo $(CC) $(CFLAGS) -o $@ $(SOURCES) $(LDFLAGS)
	@$(CC) $(CFLAGS) -o $@ $(SOURCES) $(LDFLAGS)
